<!doctype html>
<html ng-app="OrderMeal">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="user-scalable=no,width=device-width">
  <title>订餐网－登录</title>
  <%= stylesheet_link_tag 'login', media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag 'app-login' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="login" ng-controller="LoginController">
  <%= form_tag login_path, class: 'form form-horizontal', name: 'loginForm', role: :form, id: 'login-form'  do %>
      <h2><a href="#">订餐网</a></h2>
      <div class="form-group has-error">
        <% if @error%>
            <span class="help-block">用户名或密码错误</span>
        <% end %>
      </div>
      <div class="form-group">
        <label for="username" class="col-sm-3 hidden-xs control-label">用户名</label>

        <div class="col-xs-12 col-sm-9">
          <input type="text" class="form-control" name="username" placeholder="用户名／邮箱登录" required ng-model="user.username">
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="col-xs-3 hidden-xs control-label">密  码</label>

        <div class="col-xs-12 col-sm-9">
          <input type="password" class="form-control" name="password" placeholder="输入密码" required ng-model="user.password">
        </div>
      </div>
      <button type="submit" class="btn btn-success action submit"><i class="fa fa-check"></i>登 录</button>
      <span class="separator">or</span>
      <a href="" class="cancel" data-ng-click="reset()">重 置</a>
  <% end %>
</div>
</body>
</html>