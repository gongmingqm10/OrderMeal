<form ng-submit="create_food()" role="form">
<p class="error" data-ng-show="error">{{error}}</p>
<div class="form-group">
  <label for="name">菜名</label>
  <input type="text" class="form-control" name="name" required ng-model="food.name">
</div>
<div class="form-group">
  <label for="price">价格</label>
  <input type="number" step="any" class="form-control" name="price" required ng-model="food.price">
</div>
<div class="form-group">
  <label for="desc">描述</label>
  <textarea type="text" class="form-control" name="describe" ng-model="food.describe" rows="3"></textarea>
</div>
<div class="form-group upload-container">
  <a class="btn btn-primary" data-ng-click="upload_image()"><i class="fa fa-upload"></i>上传图片</a>
  <input id="file" type="file" accept="image/*">
</div>
<div class="form-group">
  <input class="btn btn-primary" type="submit" value="添 加">
  <button type="button" class="btn btn-danger" data-ng-click="cancel()">取 消</button>
</div>
<img class="food-image img-thumbnail" data-ng-show="food.picture">
</form>
